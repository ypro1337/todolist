<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.SubScene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.univ.rouen.todolist.gui.controllers.TaskController">
    <MenuBar>
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem onAction="#saveTree" text="Save" />
                    <MenuItem onAction="#openTree" text="Open" />
                </items>
            </Menu>
        </menus>
    </MenuBar>


   <ButtonBar prefHeight="40.0" prefWidth="200.0">
     <buttons>
         <!-- Button to show the TreeTableView -->
         <Button fx:id="showTreeTableViewButton" onAction="#showTreeTableView" prefHeight="26.0" prefWidth="288.0" text="Show TreeTableView" />

         <!-- Button to hide the TreeTableView, initially hidden -->
         <Button fx:id="hideTreeTableViewButton" onAction="#hideTreeTableView" prefHeight="26.0" prefWidth="288.0" text="Hide TreeTableView"  visible="false" />
         <Button mnemonicParsing="false" onAction="#addTask" prefHeight="26.0" text="Add Task" />
     </buttons>
   </ButtonBar>
   <SubScene fx:id="subScene" height="226.0" width="670.0">
     <root>
       <Region />
     </root>
   </SubScene>
</VBox>
